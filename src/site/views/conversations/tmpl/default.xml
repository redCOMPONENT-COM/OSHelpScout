<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_OSHELPSCOUT_CONVERSATIONS_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_OSHELPSCOUT_CONVERSATIONS_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>
    <fieldset
        addfieldpath="/administrator/components/com_oshelpscout/form/fields">
        <fields name="params">
            <fieldset name="basic" label="COM_OSHELPSCOUT_OPTIONS">
                <field name="helpscout_mailbox"
                    type="hsmailboxes"
                    default=""
                    label="COM_OSHELPSCOUT_FIELD_HELPSCOUT_MAILBOX_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_HELPSCOUT_MAILBOX_DESC" />

                <field name="custom_title"
                    type="text"
                    default=""
                    label="COM_OSHELPSCOUT_FIELD_CUSTOM_TITLE_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_CUSTOM_TITLE_DESC" />

                <field name="subjects"
                    type="textarea"
                    default=""
                    rows="10"
                    cols="100"
                    label="COM_OSHELPSCOUT_FIELD_SUBJECTS_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_SUBJECTS_DESC" />

                <field name="show_additional_subject_field"
                    type="list"
                    default="0"
                    label="COM_OSHELPSCOUT_FIELD_SHOW_ADDITIONAL_SUBJECT_FIELD_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_SHOW_ADDITIONAL_SUBJECT_FIELD_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="guests" label="COM_OSHELPSCOUT_GUEST_OPTIONS">
                <field name="guest_prepare_custom_content"
                    type="list"
                    default="0"
                    label="COM_OSHELPSCOUT_FIELD_GUEST_PREPARE_CUSTOM_CONTENT_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_GUEST_PREPARE_CUSTOM_CONTENT_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="guest_custom_content"
                    type="editor"
                    filter="safehtml"
                    default="Restricted access"
                    label="COM_OSHELPSCOUT_FIELD_GUEST_CUSTOM_CONTENT_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_GUEST_CUSTOM_CONTENT_DESC" />

                <field name="guest_custom_media"
                    type="textarea"
                    default=""
                    label="COM_OSHELPSCOUT_FIELD_GUEST_CUSTOM_MEDIA_LABEL"
                    description="COM_OSHELPSCOUT_FIELD_GUEST_CUSTOM_MEDIA_DESC" />
            </fieldset>
        </fields>
    </fieldset>
</metadata>
